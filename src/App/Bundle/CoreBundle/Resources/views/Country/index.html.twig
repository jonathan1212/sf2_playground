{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Country list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Countryid</th>
                <th>Name</th>
                <th>Code</th>
                <th>Dateadded</th>
                <th>Datelastmodified</th>
                <th>Referencenumber</th>
                <th>Areacode</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('country_show', { 'id': entity.countryId }) }}">{{ entity.countryId }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.code }}</td>
                <td>{% if entity.dateAdded %}{{ entity.dateAdded|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateLastModified %}{{ entity.dateLastModified|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.referenceNumber }}</td>
                <td>{{ entity.areaCode }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('country_show', { 'id': entity.countryId }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('country_edit', { 'id': entity.countryId }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('country_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
